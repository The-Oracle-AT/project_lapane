---
import BlogPost from '../../components/BlogPost.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
    const allPosts = await Astro.glob('../posts/*.md');//get all posts
        //get all unique tags by adding all tag arrays the filtering them to ignore non-uniques
    const uniqueTags = [...new Set(allPosts.map((post:any) => post.frontmatter.tags).flat())];

    return uniqueTags.map((tag:any) => {
        //filter posts by tags
        const filteredPosts = allPosts.filter((post:any) => post.frontmatter.tags.includes(tag));
        
        return {params: { tag }, props: { posts: filteredPosts },};
    });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<BaseLayout pageTitle={tag}>
    <p>Posts tagged with {tag}</p>
    <ul>
        {posts.map((post:any) => <BlogPost url={post.url} title={post.frontmatter.title} chapter={post.frontmatter.chapter}/>)}
    </ul>
</BaseLayout>
