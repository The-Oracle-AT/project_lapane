---
import BlogPost from '../components/BlogPost.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../stylesheets/globalStyles.css';

const allPosts = await Astro.glob('../pages/posts/*.md');//import all posts

const pageTitle = "Blog";
const pageDescription = "Blog Posts";
---
<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>

	<p>This is where I will post about my journey learning and creating projects</p>
	<ul>
		{allPosts.map((post) => <BlogPost title={post.frontmatter.title} 
		chapter = {post.frontmatter.chapter} url = {post.url} />)}
	</ul>
</BaseLayout>
