---
const { title, url, chapter } = Astro.props
---
<a href={url}>
    <div class="card">
        <div class="img">
            <img src={url} alt= `${title} picture` />
        </div>
        <p>{chapter}: {title}</p>
        
    </div>
</a>

<style>
    :root {
        --card-width: 420px;
        --card-height: 480px;
        --background: #19141a;
    }
    @keyframes zoom {
        from {
            transform: scale(1);
        }
        to {
            transform: scale(1.2);
        }
    }
    a {
        background-color: transparent;
        padding: 0%;
        text-decoration: none;
        transition: all 0.5s ease-in-out;
        width: fit-content;
    }
    a:hover {
        background-color: transparent;
        padding: 0%;
        text-decoration: none;
        transform: scale(1.2);
    }
    .card {
        background-color: var(--background);
        max-height: var(--card-height);
        max-width: var(--card-width);
        border-radius: .5em;
        padding: 0.3em;
        margin-top: 20px;
        text-align: left;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
    .img {
        height: 60%;
        width: 100%;
        border-top-right-radius: .5em;
        border-top-left-radius: .5em;
    }
    p {
        width: 100%;
        height: 40%;
        font-family: 'Gill Sans', 'Gill Sans MT', 'Calibri', 'Trebuchet MS', sans-serif;
        font-weight: bold;
    }
    @media screen and (max-width: 768px) {
        .card {
            width: 33%;

        }
    }
    @media screen and (min-width: 480px) and (max-width: 767px){
        .card {
            width: 60%;
        }
    }
    @media screen and (max-width: 479px) {
        .card {
            width: 90%;
        }
        
    }
</style>